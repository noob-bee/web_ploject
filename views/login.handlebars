<main>
    <form action="/login" method="post" id="login-form" class="login-form">
        <label for="emailId">Email</label>
        <input type="email" id="emailId" name="emailId" class="input-field">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="input-field">
        <button type="submit" class="submit-button">Submit</button>
    </form>
    {{!-- <a href="/registration" class="register-link">Don't have an account? Register here.</a> --}}
    <h2>{{loginError}}</h2>
    <p id="error-messages"></p>
    <div class="overlay"></div>
    <link rel="stylesheet" href="../public/css/login.css">
    <script src="../public/js/loginValidation.js"></script>
</main>
